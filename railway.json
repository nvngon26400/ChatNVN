{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "mise use -g node@20 && mise install && npm ci --prefix web && npm run build --prefix web"
  },
  "deploy": {
    "startCommand": "uvicorn src.mock_project.api:app --host 0.0.0.0 --port $PORT",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}